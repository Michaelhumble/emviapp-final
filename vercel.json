{
  "version": 2,
  "redirects": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "emvi.app" }],
      "destination": "https://www.emvi.app/$1",
      "permanent": true
    },
    { "source": "/sign-in", "destination": "/signin", "permanent": true },
    { "source": "/sign-in/(.*)", "destination": "/signin/$1", "permanent": true },
    { "source": "/login", "destination": "/signin", "permanent": true },
    { "source": "/auth/signup", "destination": "/signup", "permanent": true },
    { "source": "/auth/signin", "destination": "/signin", "permanent": true },
    { "source": "/blog/emviapp-vision/emviapp-mission-vision", "destination": "/emviapp-mission-vision", "permanent": true },
    { "source": "/jobs/in/saint-:rest", "destination": "/jobs/in/st-:rest", "permanent": true },
    { "source": "/jobs/in/fort-:rest", "destination": "/jobs/in/ft-:rest", "permanent": true },
    { "source": "/jobs/saint-:rest", "destination": "/jobs/st-:rest", "permanent": true },
    { "source": "/jobs/:role/saint-:rest", "destination": "/jobs/:role/st-:rest", "permanent": true },
    { "source": "/jobs/:role/fort-:rest", "destination": "/jobs/:role/ft-:rest", "permanent": true },
    { "source": "/artists/:specialty/saint-:rest", "destination": "/artists/:specialty/st-:rest", "permanent": true },
    { "source": "/artists/:specialty/fort-:rest", "destination": "/artists/:specialty/ft-:rest", "permanent": true }
  ],
  "rewrites": [
    {
      "source": "/api/csp-report",
      "destination": "https://wwhqbjrhbajpabfdwnip.functions.supabase.co/csp-report"
    },
    {
      "source": "/api/partner-contact",
      "destination": "https://wwhqbjrhbajpabfdwnip.functions.supabase.co/partner-contact"
    },
    {
      "source": "/jobs-sitemap.xml",
      "destination": "https://wwhqbjrhbajpabfdwnip.functions.supabase.co/jobs-sitemap"
    },
    {
      "source": "/jobs-sitemaps/(.*)",
      "destination": "https://wwhqbjrhbajpabfdwnip.functions.supabase.co/jobs-sitemap/jobs-sitemaps/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Strict-Transport-Security", "value": "max-age=63072000; includeSubDomains; preload" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Permissions-Policy", "value": "geolocation=(), microphone=(), camera=()" },
        { "key": "Content-Security-Policy-Report-Only", "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https://*.supabase.co; font-src 'self' data:; connect-src 'self' https://*.supabase.co https://www.google-analytics.com https://wwhqbjrhbajpabfdwnip.supabase.co; frame-ancestors 'none'; base-uri 'self'; form-action 'self'" },
        { "key": "Content-Security-Policy-Report-Only-V2", "value": "default-src 'self'; script-src 'self' https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https://*.supabase.co https://www.google-analytics.com; font-src 'self' data:; connect-src 'self' https://*.supabase.co https://www.google-analytics.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self'; report-uri /api/csp-report" }
      ]
    },
    {
      "source": "/jobs-sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml; charset=utf-8" },
        { "key": "Cache-Control", "value": "public, max-age=300, s-maxage=600" }
      ]
    },
    {
      "source": "/jobs-sitemaps/(.*)",
      "headers": [
        { "key": "Content-Type", "value": "application/xml; charset=utf-8" },
        { "key": "Cache-Control", "value": "public, max-age=300, s-maxage=600" }
      ]
    },
    {
      "source": "/locations-sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml; charset=utf-8" },
        { "key": "Cache-Control", "value": "public, max-age=900, s-maxage=900" }
      ]
    }
  ]
}
