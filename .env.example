# Performance Development Tools  
# Set true locally to see the perf overlay; ignored in production
VITE_PERF_OVERLAY=false

# Feature Flags
# Set to true to enable auto-opening signup modal (default: false)
VITE_ENABLE_SIGNUP_MODAL=false

# Twilio request validation (used by the webhook)
TWILIO_AUTH_TOKEN=

# Optional explicit host if framework needs it
PUBLIC_APP_ORIGIN=https://www.emvi.app

# Stripe Configuration (Required for Payments)
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Site URL for Stripe redirects
SITE_URL=https://www.emvi.app

# HubSpot Configuration (Optional - only loads in production when set)
HUBSPOT_PORTAL_ID=

# Stripe Price IDs for Job/Salon Posts
STRIPE_PRICE_JOB_POST=price_...
STRIPE_PRICE_SALON_POST=price_...

# Payment debug mode (set to true for debugging)
VITE_DEBUG_PAYMENTS=false
